<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="Music player" Height="130.168" Width="445.867" Activated="Window_Activated">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="421*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Prev" Content="◄◄" HorizontalAlignment="Left" Margin="135.4,62,0,0" VerticalAlignment="Top" Width="37" Height="24" Click="Prev_Click" Grid.Column="1" />
        <Button x:Name="Next" Content="►►" HorizontalAlignment="Left" Margin="226.4,62,0,0" VerticalAlignment="Top" Width="36" Height="24" Click="Next_Click" Grid.Column="1" />
        <Button x:Name="Play" Content="►" HorizontalAlignment="Left" Margin="177.4,49,0,0" VerticalAlignment="Top" Width="44" Height="44" FontSize="22" Click="Play_Click" Grid.Column="1"/>
        <Label x:Name="SongName" Content="Egypt Central - Over and Under" HorizontalAlignment="Center" Margin="10,10,10.2,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="18" Width="419" Grid.ColumnSpan="2"/>
        <Label Content="Total time:" HorizontalAlignment="Left" Margin="11,60,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="TotalTime" Content="03:58" HorizontalAlignment="Left" Margin="56.8,60,0,0" VerticalAlignment="Top" Width="61" Grid.Column="1"/>
        <Button x:Name="AddFolder" Content="Add folder" HorizontalAlignment="Left" Margin="284.4,44,0,0" VerticalAlignment="Top" Width="126" Click="AddFolder_Click" Grid.Column="1"/>
        <Button x:Name="Playlist" Content="Playlist" HorizontalAlignment="Left" Margin="284.4,68,0,0" VerticalAlignment="Top" Width="126" Click="Playlist_Click" Grid.Column="1"/>

    </Grid>
</Window>
